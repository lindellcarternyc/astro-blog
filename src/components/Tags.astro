---
const { tags } = Astro.props as { tags: string[] }
---

<div class="tags">
  {tags.map(tag => (
    <p class="tag">
      <a href={`/${tag}`}>{tag}</a>
    </p>
  ))}
</div>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>